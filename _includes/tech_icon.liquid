<img
  {% if include.site %}
    {% if include.site == 'devicons' %}
      src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/{{ include.file }}"
    {% elsif include.site == 'skillicons' %}
      src="https://skillicons.dev/icons?i={{ include.file }}"
    {% endif %}
  {% else %}
    src="{{ include.file }}"
  {% endif %}

  {% if include.alt %}
    alt="{{ include.alt }}"
  {% endif %}
  {% if include.title %}
    title="{{ include.title }}"
  {% endif %}
  {% if include.width %}
    width="{{ include.width }}"
  {% else %}
    width="auto"
  {% endif %}
  {% if include.height %}
    height="{{ include.height }}"
  {% else %}
    height="40"
  {% endif %}
>
