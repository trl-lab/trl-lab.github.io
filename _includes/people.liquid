<div class="col">
  <a href="{% if people.redirect %}{{ people.redirect }}{% else %}{{ people.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if people.img %}
        {%
          include figure.liquid
          loading="eager"
          path=people.img
          sizes = "250px"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h4 class="card-title">{{ people.name }}</h4>
        <p class="card-text">{{ people.role }}</p>
        <div class="row ml-1 mr-1 p-0">
        </div>
      </div>
    </div>
  </a>
</div>
